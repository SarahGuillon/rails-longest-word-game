<h1>Welcome to the longest word-game!</h1>
<h2>Here is your grid:</h2>
<ul class="letters">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>


<form action="/score" method="post" class="form">
  <div class="form">
    <label>What is the longest word you can find? </label>
  </div>
  <div class="form">
    <input type="text" name="word" id="word">
    <button type="submit">Play</button>
  </div>
    <input name="grid" type="hidden" value= "<%= @letters %>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
